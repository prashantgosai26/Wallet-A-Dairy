<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Registration" >

    <EditText
        android:id="@+id/etemail_login"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvCreateAccount_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@drawable/email"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="5dp"
        android:textColor="#000000"
        android:textSize="30dp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tvCreateAccount_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:gravity="center"
        android:textSize="50dp"
        android:text="Login Into Wallet"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <Button
        style="@style/btnStyleOrange"
        android:id="@+id/btnSubmit_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Login"
        android:textSize="25dp" />

    <Button
        style="@style/btnStyleOrange"
        android:id="@+id/btnforgot_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRegistration_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="15dp"
        android:text="Forgot Password?"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/etPassword_login"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/tvCreateAccount_login"
        android:layout_below="@+id/etemail_login"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@drawable/key"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:textColor="#000000"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnRegistration_login"
        style="@style/btnStyleOrange"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSubmit_login"
        android:layout_centerVertical="true"
        android:text="Registration"
        android:textSize="25dp" />

</RelativeLayout>